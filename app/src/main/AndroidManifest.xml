<manifest package="com.fourcircles.computerterms"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name=".ComputerTermsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SingleListItem"
                  android:label="Single Item Selected"
                  android:parentActivityName=".ComputerTermsActivity"
                         >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value= ".ComputerTermsActivity"
                />

        </activity>
    </application>

</manifest>